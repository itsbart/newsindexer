<div class="page-header">
  <h1>All of the Questions </h1>
</div>
<%= link_to "Post a New Question", new_question_path, class: "btn btn-success"%>
<% @questions.each do |question| %>
  <div class="question">
    <strong><%= question.name %></strong>
    <strong><%= question.class_name %></strong>
    <p><%= question.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(question.created_at) + " ago", question %>
      <span class="admin">
        <%= link_to "Edit", edit_question_path(question) %> |
        <%= link_to "Delete", question, method: :delete, data: { confirm: "Are you sure you want to do delete this question?"}%>
      </span>
    </div>
  </div>
<%end%>
